<view class="picdiv">
<image src="{{Filepath}}" mode="aspectFit" class="Image" bindtap="PhotoRecognition"></image>
</view>
<view class="doublebutton">
  <button class="rego" bindtap="PhotoRecognition">上传照片</button>
  <!-- <button class="rego" bindtap="Realtimerecogn)">实时检测</button> -->
</view>

<button type="primary" bindtap="regition" class="Button">识别</button>
<view wx:if="{{isshow}}" class="resultdiv">
  <view class="resultimgdiv">
    <image class="resultimg" src="{{resultimgpath}}" mode="aspectFit"></image>
  </view>
  <view class="resulttextinfo">
  <text>识别结果:
  </text>
  {{resultText}}
  </view>
</view>

