<!--pages/studentinfo/studentinfo.wxml-->
<view class="topdiv"><text>返校信息填写</text> </view>
<view class='content'>
  <form bindsubmit="formSubmit">
    <view class='box'>
      <text class='message'>姓名</text>
      <input name="studentname" placeholder="请输入姓名"
        class='inputbox' bindinput='studentnameInput' />
    </view>

    <view class='box'>
      <text class='message'>学号</text>
      <input name="studentId" placeholder="请输入学号" type="number"
       class="inputbox" bindinput="studentIdInput" />
    </view>


    <view class='box pickertext'>
      <text class='message'>返校日期</text>
    </view>
    <view class='box pickercontent'>
      <picker mode="date" name="date"  bindchange="bindDateChange">
      <view class="picker">
        当前选择  {{date}}
      </view>
      </picker>
    </view>

    <view class='box pickertext'>
      <text class='message'>返校时间</text>
    </view>
    <view class='box pickercontent'>
      <picker mode="selector" name="time" range="{{range}}" bindchange="bindtimeChange">
      <view class="picker">
        当前选择  {{time}}
      </view>
      </picker>
    </view>

    <button formType="submit" class='submit' type="primary">提交</button>
  </form>
</view>