<!--pages/login/login.wxml-->
<view class="page-body">
  <view class="page-section">
  <view class="bigtext"><text>登录</text></view>
    <view class="input-container">
      <image src="../../images/_people.png"></image>
      <input placeholder="手机号" placeholder-class="input-text" value="{{telephone}}" bindinput="inputTelephone"/>
    </view>

    <view class="input-container">
      <image src="../../images/_lock.png"></image>
      <input password="true" placeholder="密码" placeholder-class="input-text" value="{{password}}" bindinput="inputPassword"/>
    </view>
    <view class="operation">
    <button bindtap="login" class="login" >登录</button>
    <button bindtap="registered" class="registered">注册</button>
    </view>
  </view>
</view>

